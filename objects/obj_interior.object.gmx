            <string>/// Placement mode (only if active)

// TODO make camera follow the placement instead of the invisible player
// TODO adding lerping

if (place_active)
{
    // move placement object and keep within room bounds
    
    var move_x = input_check_pressed(input.right) - input_check_pressed(input.left);
    var move_y = input_check_pressed(input.down) - input_check_pressed(input.up);
    
    var width = sprite_get_width(object_get_sprite(place_obj)) div tile_size - 1;
    var height = sprite_get_height(object_get_sprite(place_obj)) div tile_size - 1;

    place_x = clamp(place_x + move_x, 0, interior_width-width-1);    
    place_y = clamp(place_y + move_y, 0, interior_height-height-1);
    
    var xx = place_x * tile_size;
    var yy = (place_y + 2) * tile_size;
    
    // place object
    if (input_check_pressed(input.a))
    {
        instance_create(xx, yy, place_obj);
        
        // workaround -- remove current item from inventory
        // it is assumed that the inventory initiated this
        var inventory = global.ui_inventory;
        inventory.inv[inventory.inv_index] = -1;
    }

    // cancel placement mode   
    place_active = not (input_check_pressed(input.a) or input_check_pressed(input.b));
    
    // check position is valid
    
    width *= tile_size;
    height *= tile_size;
    
    place_valid = (collision_rectangle(xx, yy, xx+width, yy+height, obj_interior_base, false, true) == noone)
        and rectangle_in_rectangle(
            xx, yy, 
            xx+width, yy+height, 
            obj_interior_exit.x-16, obj_interior_exit.y-16, 
            obj_interior_exit.x+31, obj_interior_exit.y+31) == 0;
}

visible = place_active;
</string>

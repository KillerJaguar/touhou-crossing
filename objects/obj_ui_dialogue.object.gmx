visible = (y != max_y);

if (not visible and not display)
{
    // Deactivate ui_dialogue and its subcomponents
    globalvar ui_dialogue;
    instance_deactivate_object(ui_dialogue);
    instance_deactivate_object(ui_dialogue.inst_response);
    instance_deactivate_object(ui_dialogue.inst_response.selection);
    

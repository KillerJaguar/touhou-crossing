}

// continue

if (cont_visible)
{
    if (input_check_pressed(input.a) or mouse_check_button_pressed(mb_left))
        event_user(0);
}
else
    cont_visible = text_display == 1 and not inst_response.show;

// text

if (text_active)
    text_display = clamp(text_display + text_display_rate_, 0, 1);
